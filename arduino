#include <Servo.h>

Servo xServo;
Servo yServo;

int currentValue = 0;
int values[] = {0,0};

void setup() {
  xServo.attach(10);
  yServo.attach(9);
  
  Serial.begin(9600);
}

void loop() {
   if(Serial.available()){
    int incomingValue = Serial.read();
    
    values[currentValue] = incomingValue;

    currentValue++;
    if(currentValue > 1){
      currentValue = 0;
    }
   }

    //xServo.write(30);
    //yServo.write(30);
    //delay(1000);
    //xServo.write(165);
    //yServo.write(165);
    //delay(1000);
    
    xServo.write(180-values[0]);
    yServo.write(180-values[1]);
    delay(1);
}
